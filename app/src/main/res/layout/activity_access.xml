<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bestf.marioclient.C_AccessActivity"
    android:paddingTop="30dp">


    <ImageView
        android:id="@+id/equipmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/title" />

    <ImageButton
        android:id="@+id/enterEquipmentStateBtn"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_below="@+id/equipmentTitle"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/mascot" />

    <TextView
        android:id="@+id/enterEquipmentStateBtnTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterEquipmentStateBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="안전장구 착용여부 보기"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/bgLogo"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/enterEquipmentStateBtnTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        app:srcCompat="@drawable/bglogo" />

    <TextView
        android:id="@+id/copyRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/enterEquipmentStateBtn"
        android:layout_alignStart="@+id/enterEquipmentStateBtn"
        android:layout_below="@+id/bgLogo"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Copyright 2018. Gachon Univ."
        android:textSize="12dp" />


</RelativeLayout>
